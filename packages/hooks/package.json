{
  "name": "zxreact-hooks",
  "version": "1.0.7",
  "description": "zxReact Hooks Library",
  "type": "module",
  "main": "./lib/index.js",
  "module": "./es/index.js",
  "types": "./lib/index.d.ts",
  "unpkg": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./es/index.js",
      "require": "./lib/index.js"
    }
  },
  "files": [
    "lib",
    "es",
    "dist"
  ],
  "scripts": {
    "build:ts": "tsc",
    "publish:ts": "pnpm run build:ts && npm publish --access public",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "build": "rollup -c rollup.config.js",
    "publish": "pnpm run build && npm publish --access public"
  },
  "keywords": [
    "hooks",
    "React Hooks",
    "React",
    "zxReact Hooks Library"
  ],
  "author": "zhaixu",
  "license": "ISC",
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.0.3",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/coverage-istanbul": "3.2.4",
    "@vitest/ui": "3.2.4",
    "jsdom": "^26.1.0",
    "vite": "^5.4.19"
  },
  "dependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "glob": "^11.0.3",
    "rollup": "^4.45.1",
    "rollup-plugin-cleaner": "^1.0.0",
    "rollup-plugin-dts": "^6.2.1",
    "rollup-plugin-terser": "^7.0.2"
  }
}
