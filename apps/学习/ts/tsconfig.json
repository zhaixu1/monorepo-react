{
  "compilerOptions": {
    // 目标 ECMAScript 版本
    "target": "ES2020",
    // 模块系统
    "module": "commonjs",
    // 模块解析策略
    "moduleResolution": "node",
    // 输出目录
    "outDir": "./dist",
    // 根目录
    "rootDir": "./src",
    // 严格模式
    "strict": true,
    // 允许隐式 any
    "noImplicitAny": true,
    // 严格空值检查
    "strictNullChecks": true,
    // 严格函数类型检查
    "strictFunctionTypes": true,
    // 严格绑定检查
    "strictBindCallApply": true,
    // 严格属性初始化检查
    "strictPropertyInitialization": true,
    // 不允许隐式返回
    "noImplicitReturns": true,
    // 不允许隐式 this
    "noImplicitThis": true,
    // 不允许未使用的局部变量
    "noUnusedLocals": true,
    // 不允许未使用的参数
    "noUnusedParameters": true,
    // 允许装饰器
    "experimentalDecorators": true,
    // 允许元数据反射
    "emitDecoratorMetadata": true,
    // 允许导入 JSON 模块
    "resolveJsonModule": true,
    // 允许默认导入
    "allowSyntheticDefaultImports": true,
    // 强制使用 ES 模块语法
    "esModuleInterop": true,
    // 跳过声明文件检查
    "skipLibCheck": true,
    // 生成声明文件
    "declaration": true,
    // 声明文件输出目录
    "declarationDir": "./dist",
    // 生成 source map
    "sourceMap": true,
    // 移除注释
    "removeComments": false,
    // 允许导入 .ts 文件
    "allowImportingTsExtensions": false,
    // 检查 JS 文件
    "allowJs": true,
    // 检查 JS 文件
    "checkJs": false,
    // 增量编译
    "incremental": true,
    // 增量编译输出目录
    "tsBuildInfoFile": "./dist/.tsbuildinfo"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "ts-node": {
    "esm": false,
    "experimentalSpecifierResolution": "node"
  }
} 